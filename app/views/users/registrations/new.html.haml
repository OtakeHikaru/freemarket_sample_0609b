.sign-up
  %h1 &#x4F1A;&#x54E1;&#x60C5;&#x5831;&#x306E;&#x5165;&#x529B;
  .sign-up__main
    .sign-up__single
      .form-group-detail
        .form-group
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            .form-group__label
              %h6
                %p.form-group-label__require
                  \&#x30CB;&#x30C3;&#x30AF;&#x30CD;&#x30FC;&#x30E0;
                  %span#require &#x5FC5;&#x9808;
              %br/
              = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: '例）メルカリ太郎', class: 'field'
            %br/
            .form-group__label
              %h6
                %p.form-group-label__require
                  \&#x30E1;&#x30FC;&#x30EB;&#x30A2;&#x30C9;&#x30EC;&#x30B9;
                  %span#require &#x5FC5;&#x9808;
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'pc・携帯どちらでも可', class: 'field'
            %br/
            .form-group__label
              %h6
                %p.form-group-label__require
                  \&#x30D1;&#x30B9;&#x30EF;&#x30FC;&#x30C9;
                  %span#require &#x5FC5;&#x9808;
              %br/
              = f.password_field :password, autocomplete: "off" , placeholder: '６文字以上', class: "field"
            %br/
            .form-group__label
              %h6
                %p.form-group-label__require
                  \&#x30D1;&#x30B9;&#x30EF;&#x30FC;&#x30C9;(&#x78BA;&#x8A8D;)
                  %span#require &#x5FC5;&#x9808;
              %br/
              = f.password_field :password_confirmation, autocomplete: "off" , placeholder: '６文字以上', class: "field"
            %br/
            .form-group__label
              %label{:for => "birthday"}
                %h6 &#x751F;&#x5E74;&#x6708;&#x65E5;
                %span#require.form-group-label__require &#x5FC5;&#x9808;
            .select_y
              = select_tag :year, options_for_select( (1900..2030)),  include_blank: '--', class: 'field', id: 'select_year', style: 'width:90px'
              %i.fas.fa-angle-down
              %span &#x5E74;
            .select_m
              = select_tag :month, options_for_select((1..12)),  include_blank: '--', class: 'field', id: 'select_month', style: 'width:90px'
              %i.fas.fa-angle-down
              %span &#x6708;
            .select_d
              = select_tag :day, options_for_select((1..31)),  include_blank: '--', class: 'field', id: 'select_day', style: 'width:90px'
              %i.fas.fa-angle-down
              %span &#x65E5;
            %br/
            %br/
            %br/
            = succeed "label-text>" do
              %div
            %h7 &#x672C;&#x4EBA;&#x78BA;&#x8A8D;
            %p &#x5B89;&#x5FC3;&#x30FB;&#x5B89;&#x5168;&#x306B;&#x3054;&#x5229;&#x7528;&#x3044;&#x305F;&#x3060;&#x304F;&#x305F;&#x3081;&#x306B;&#x3001;&#x304A;&#x5BA2;&#x3055;&#x307E;&#x306E;&#x672C;&#x4EBA;&#x60C5;&#x5831;&#x306E;&#x767B;&#x9332;&#x306B;&#x3054;&#x5354;&#x529B;&#x304F;&#x3060;&#x3055;&#x3044;&#x3002;&#x4ED6;&#x306E;&#x304A;&#x5BA2;&#x3055;&#x307E;&#x306B;&#x516C;&#x958B;&#x3055;&#x308C;&#x308B;&#x3053;&#x3068;&#x306F;&#x3042;&#x308A;&#x307E;&#x305B;&#x3093;&#x3002;
          .recaptcha
            .g-recaptcha>
            ENV['RECAPTCHA_SITE_KEY']&gt;
        .sign-up-next-box
          %span
            \&#x300C;&#x6B21;&#x3078;&#x9032;&#x3080;&#x300D;&#x306E;&#x30DC;&#x30BF;&#x30F3;&#x3092;&#x30AF;&#x30EA;&#x30C3;&#x30AF;&#x3059;&#x308B;&#x3053;&#x3068;&#x306B;&#x3088;&#x308A;&#x3001;
            \#{link_to '利用規約', id: 'turms', color: '$right-blue;'}&#x306B;&#x540C;&#x610F;&#x3057;&#x305F;&#x3082;&#x306E;&#x3068;&#x307F;&#x306A;&#x3057;&#x307E;&#x3059;
          = succeed ",id:" do
            .button-next
      .btn-next-text
        %p
          = link_to 本人情報の登録について ,'#', class: next-text
          %i.fas.fa-angle-right
    / sign-up-next-box
