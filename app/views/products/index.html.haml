%body
  .default-container
    = render partial: "/partial/header"
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/css/swiper.min.css", :rel => "stylesheet"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js"}

  .swiper-container
    .swiper-wrapper
      / スライド
      .swiper-slide
        = image_tag 'top_1_1000_240.png', alt: '', width: '100%', height: '300'
      .swiper-slide
        = image_tag 'top_2_1000_240.png', alt: '', width: '100%', height: '300'
      .swiper-slide
        = image_tag 'top_3_1000_240.png', alt: '', width: '100%', height: '300'
    / ページネーション
    .swiper-button-prev.swiper-button-white
    .swiper-button-next.swiper-button-white
    .swiper-pagination.swiper-pagination-white

  :javascript
    var mySwiper = new Swiper ('.swiper-container', {
    loop: true,
    slidesPerView: 1,
    // ページネーション
    pagination: '.swiper-pagination',
    // ナビゲーションボタン
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',
    breakpoints: {
      900: {
        slidesPerView: 1,
        spaceBetween: 0
      }
    }
    });

