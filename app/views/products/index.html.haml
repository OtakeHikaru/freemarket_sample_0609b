%body
  .default-container
    = render partial: "/partial/header"
  %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.min.css", :rel => "stylesheet"}/
  %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js"}
  .swiper-container
    .swiper-wrapper
      / スライド
      .swiper-slide
        = image_tag 'https://cdn.pixabay.com/photo/2018/02/16/10/52/beverage-3157395_960_720.jpg', alt: '', width: '100%', height: '300'
      .swiper-slide
        = image_tag 'https://cdn.pixabay.com/photo/2018/05/04/10/30/team-3373638_960_720.jpg', alt: '', width: '100%', height: '300'
    / ページネーション
    .swiper-pagination
    / ナビゲーションボタン
    .swiper-button-prev
    .swiper-button-next
  :javascript
    var mySwiper = new Swiper ('.swiper-container', {
    loop: true,

    // ページネーション
    pagination: '.swiper-pagination',

    // ナビゲーションボタン
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',

    });
