%body
  .default-container
    = render partial: "/partial/header"
  %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.min.css", :rel => "stylesheet"}
  %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js"}
  .swiper-container
    .swiper-wrapper
      .pc
      / スライド
      .swiper-slide
        = image_tag 'top_1_1000_240.png', alt: '', width: '100%', height: '300',class: 'pc'
        = image_tag 'top_1.png', alt: '', width: '100%', height: '200',class: 'sp'
      .swiper-slide
        = image_tag 'top_2_1000_240.png', alt: '', width: '100%', height: '300',class: 'pc'
        = image_tag 'top_2.png', alt: '', width: '100%', height: '200',class: 'sp'
      .swiper-slide
        = image_tag 'top_3_1000_240.png', alt: '', width: '100%', height: '300',class: 'pc'
        .app_button_pc
          = link_to image_tag 'apple.png', class: 'apple_app', height: '40', width: 'auto'
        .google_button_pc
          = link_to image_tag 'google.png', class: 'google_app', height: '46', width: 'auto'
        = image_tag 'top_3.png', alt: '', width: '100%', height: '200',class: 'sp'

    / ページネーション
    .swiper-pagination.swiper-pagination-white
    / ナビゲーションボタン
    .swiper-button-prev.swiper-button-white
    .swiper-button-next.swiper-button-white

  :javascript
    var mySwiper = new Swiper ('.swiper-container', {
    loop: true,
    speed: 1000,
    autoplay: 3000,
    spaceBetween: 10,

    // ページネーション
    pagination: '.swiper-pagination',

    // ナビゲーションボタン
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',

    });
.main-contents
  .main-contents-nav
    .pickup-contents
      %h2.pickup-contents-header ピックアップカテゴリー
      .items-box-container.clearfix
        %h3.text-center
          -# TODO リンク先設定
          = link_to 'レディース 新着アイテム', ''
        .items-box-content.clearfix
          / レディース新着アイテムここから
          / １商品ここから
          - @ladies_products.each do |product|
            = render partial: "/partial/product-box", locals: { product: product}
        .view-all
          -# TODO リンク先設定
          = link_to 'すべての商品を見る', ''
      .items-box-container.clearfix
        %h3.text-center
          -# TODO リンク先設定
          = link_to 'コスメ・香水・美容 新着アイテム', ''
        .items-box-content.clearfix
          / コスメ・香水・美容 新着アイテムここから
          - @cosme_products.each do |product|
            = render partial: "/partial/product-box", locals: { product: product}
    = render partial: "/partial/footer"
